<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="0px"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/lliv1"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_info" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:paddingLeft="6dip"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/tvNom"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:paddingLeft="6dip"
                    android:textSize="14dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvEtat"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:paddingLeft="3dip"
                    android:textColor="#ff0000"
                    android:textSize="15dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNote1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:paddingLeft="3dip"
                    android:textSize="15dip"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRS"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:paddingLeft="6dip"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:text="test"
                    android:textSize="14dip"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCP"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:paddingLeft="6dip"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/tvVille"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:paddingLeft="6dip"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCommercial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:textSize="14dip" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llivIcons"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLeaderBoord"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="5dp"
                android:src="@drawable/leaderboard" />

            <TextView
                android:id="@+id/tvRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="5dp" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="5dp" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/tvTourPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="0/0"
                android:textSize="14dip" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>