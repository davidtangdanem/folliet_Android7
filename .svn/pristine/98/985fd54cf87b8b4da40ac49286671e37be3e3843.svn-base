				+" WHERE "+getFullFieldName(FIELD_CODECLIENT)+" = "+cod_cli+" ";
		
		
		Cursor cursor =  db.conn.rawQuery(query, null);

		if(cursor != null && cursor.moveToFirst()){

			MaterielClient = load(cursor);
